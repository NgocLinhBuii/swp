<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>TinhServlet</servlet-name>
        <servlet-class>controller.TinhServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemController</servlet-name>
        <servlet-class>controller.ItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>controller.AccountController</servlet-class>
    </servlet>
    
    <!-- Video Upload Configuration -->
    <servlet>
        <servlet-name>LessonController</servlet-name>
        <servlet-class>controller.lesson.LessonController</servlet-class>
        <multipart-config>
            <max-file-size>104857600</max-file-size> <!-- 100MB -->
            <max-request-size>209715200</max-request-size> <!-- 200MB -->
            <file-size-threshold>10485760</file-size-threshold> <!-- 10MB -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>LessonController</servlet-name>
        <url-pattern>/LessonURL</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UploadVideoServlet</servlet-name>
        <servlet-class>controller.UploadVideoServlet</servlet-class>
        <multipart-config>
            <max-file-size>104857600</max-file-size> <!-- 100MB -->
            <max-request-size>209715200</max-request-size> <!-- 200MB -->
            <file-size-threshold>10485760</file-size-threshold> <!-- 10MB -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadVideoServlet</servlet-name>
        <url-pattern>/upload-video</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>TinhServlet</servlet-name>
        <url-pattern>/tinh</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>user</param-name>
        <param-value>linhbhn</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>123</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>ItemController</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
    <!-- Google Cloud Storage Configuration -->
    <context-param>
        <param-name>cloudStorageBucket</param-name>
        <param-value>myproject-video-bucket-2025</param-value>
    </context-param>
</web-app>
